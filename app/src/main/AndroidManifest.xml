<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.proyectoappteam">

    <!-- Permiso para acceder a internet (obligatorio para Backendless) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Declaración de cámara como característica opcional -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Permiso para acceder a la cámara -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ProyectoAppTeam"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProyectoAppTeam">

        <!-- Actividad de inicio institucional con logo VeciRed -->
        <activity
            android:name=".actividades.InicioActivity"
            android:exported="true"
            android:theme="@style/Theme.ProyectoAppTeam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".actividades.PrincipalActivity" android:exported="false" />
        <activity android:name=".actividades.RegistroActivity" android:exported="false" />
        <activity android:name=".actividades.MenuPrincipalActivity" android:exported="false" />
        <activity android:name=".actividades.RecuperarPassActivity" android:exported="false" />

        <!-- FileProvider eliminado porque no se usa almacenamiento externo -->

    </application>
</manifest>