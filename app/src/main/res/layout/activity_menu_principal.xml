<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondoofi1"
    tools:context="actividades.MenuPrincipalActivity">

    <!-- Contenedor dinámico para fragmentos -->
    <FrameLayout
        android:id="@+id/priRelContenedor"
        android:layout_width="match_parent"
        android:layout_height="635dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_menu" />

    <!-- Menú institucional abajo -->
    <LinearLayout
        android:id="@+id/contenedorBotonesInferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_cuadrado_residencial"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lateralBtnMiPerfil"
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_boton_redondo"
            android:scaleType="centerInside"
            android:src="@drawable/perf902" />

        <ImageButton
            android:id="@+id/lateralBtnInicio"
            android:layout_width="74dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_boton_redondo"
            android:scaleType="centerInside"
            android:src="@drawable/inic902" />

        <ImageButton
            android:id="@+id/lateralBtnPublicar"
            android:layout_width="73dp"
            android:layout_height="72dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_boton_redondo"
            android:scaleType="centerInside"
            android:src="@drawable/public901" />

        <ImageButton
            android:id="@+id/lateralBtnNotificaciones"
            android:layout_width="78dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_boton_redondo"
            android:scaleType="centerInside"
            android:src="@drawable/noti92" />
    </LinearLayout>
</LinearLayout>