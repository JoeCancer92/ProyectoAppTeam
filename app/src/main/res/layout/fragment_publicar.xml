<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoofi1"
tools:context=".fragmentos.PublicarFragment">

    <!-- Barra superior con título y botones -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancelarPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelarpubli"
            android:backgroundTint="#545353"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/txtTituloPublicar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/crear_publicacion"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publicar"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF" />
    </LinearLayout>



    <!-- Contenido desplazable -->
    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">>

        <LinearLayout
            android:id="@+id/contenidoPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/headerUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="1dp">

                <!-- Perfil del Usuario -->
                <TextView
                    android:id="@+id/Usuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/usuario_prueba"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginBottom="16dp"/>



            </LinearLayout>

            <!-- Categorías -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categoria"
                android:textStyle="bold"

                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Categorías -->
            <RadioGroup
                android:id="@+id/rgCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbObjetosPerdidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/objetos_perdidos"
                    android:textColor="#000000"/>

                <RadioButton
                    android:id="@+id/rbRecomendacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/recomendacion"
                    android:textColor="#000000" />
            </RadioGroup>

            <!-- Descripción -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/descripcion_hint"
                    android:inputType="textMultiLine"
                    android:background="@color/teal_700"
                    android:minLines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ubicación -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ubicacion"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/llUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/fondo_tarjeta_redondeada"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/imgIconoMapa"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:contentDescription="@string/mapa_icono_desc"
                    app:tint="@color/colorBotonPrincipal" />
                <TextView
                    android:id="@+id/tvUbicacionSeleccionada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/ubicacion_seleccionada_hint"
                    android:textColor="@color/colorTextoPrincipal" />
                <Button
                    android:id="@+id/btnAbrirMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/abrir_mapa"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorBotonPrincipal"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Fotos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fotos_label"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAgregarFotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_fotos"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fotos_hint"
                android:textSize="12sp"
                android:textColor="#0D0C0C"
                android:layout_marginBottom="16dp" />

            <!-- Anuncio urgente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/fondo_tarjeta_redondeada"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/anuncio_urgente"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchUrgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Contenedor para los consejos cargados desde la base de datos -->
            <LinearLayout
                android:id="@+id/tips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@color/teal_700"
                android:layout_marginTop="24dp"
                android:elevation="2dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/titulo_consejos"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Los consejos se agregarán aquí dinámicamente -->
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
