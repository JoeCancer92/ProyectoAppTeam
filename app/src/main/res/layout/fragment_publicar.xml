<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".fragmentos.PublicarFragment">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCancelarPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancelarpubli"
            android:textAllCaps="false"
            android:backgroundTint="?attr/colorSurface"
            android:textColor="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/txtTituloPublicar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/crear_publicacion"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="?android:textColorPrimary" />

        <Button
            android:id="@+id/btnPublicar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publicar"
            android:textAllCaps="false"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />
    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contenidoPublicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/headerUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:padding="1dp">

                <TextView
                    android:id="@+id/Usuario"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/usuario_prueba"
                    android:textSize="14sp"
                    android:textColor="?android:textColorPrimary"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/categoria"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rgCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbReportes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reportes"
                    android:textColor="?android:textColorPrimary"/>

                <RadioButton
                    android:id="@+id/rbRecomendacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/recomendacion"
                    android:textColor="?android:textColorPrimary" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/descripcion_hint"
                    android:inputType="textMultiLine"
                    android:background="?attr/colorSurface"
                    android:minLines="4" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ubicacion"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/llUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:background="@drawable/fondo_tarjeta_redondeada"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/imgIconoMapa"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:contentDescription="@string/mapa_icono_desc"
                    app:tint="?attr/colorPrimary" />
                <TextView
                    android:id="@+id/tvUbicacionSeleccionada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="@string/ubicacion_seleccionada_hint"
                    android:textColor="?android:textColorPrimary" />
                <Button
                    android:id="@+id/btnAbrirMapa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/abrir_mapa"
                    android:textAllCaps="false"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fotos_label"
                android:textStyle="bold"
                android:textColor="?android:textColorPrimary"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAgregarFotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_fotos"
                android:textAllCaps="false"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fotos_hint"
                android:textSize="12sp"
                android:textColor="?android:textColorSecondary"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:background="@drawable/fondo_tarjeta_redondeada"
                android:padding="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/anuncio_urgente"
                    android:textStyle="bold"
                    android:textColor="?android:textColorPrimary" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switchUrgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_consejos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="?android:textColorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/tips_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="?attr/colorSecondary"
                android:elevation="2dp"
                android:layout_marginBottom="32dp">

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>