<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoofi1"
    android:padding="24dp"
    tools:context=".actividades.RecuperarPassActivity">

    <ImageView
        android:id="@+id/logoRecuperar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/icono5"
        android:contentDescription="@string/icono_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tituloRecuperar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recuperar_contrase単a"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextoPrincipal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/logoRecuperar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textoInstruccion"
        android:layout_width="256dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="@string/instruccion_recuperacion"
        android:textColor="@color/colorSurface"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tituloRecuperar" />

    <EditText
        android:id="@+id/inputCorreoRecuperar"
        android:layout_width="327dp"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorInput"
        android:hint="@string/correo_electronico"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorTextoInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoInstruccion" />

    <Button
        android:id="@+id/btnVerificarCorreo"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorBotonPrincipal"
        android:text="@string/verificar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputCorreoRecuperar" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutCodigoRecuperacion"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/codigo_recuperacion"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnVerificarCorreo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputCodigoRecuperacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorInput"
            android:textColor="@color/colorTextoInput"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnComprobarClave"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorBotonPrincipal"
        android:text="@string/comprobar_clave"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutCodigoRecuperacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutNuevaClave"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/nueva_contrase単a"
        android:visibility="gone"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/btnComprobarClave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNuevaClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorInput"
            android:textColor="@color/colorTextoInput"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutConfirmarClave"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/confirmar_contrase単a"
        android:visibility="gone"
        app:endIconMode="password_toggle"
        app:layout_constraintTop_toBottomOf="@id/layoutNuevaClave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputConfirmarClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorInput"
            android:textColor="@color/colorTextoInput"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnCambiarClave"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorBotonPrincipal"
        android:text="@string/cambiar_contrase単a"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutConfirmarClave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVolverInicio"
        android:layout_width="291dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorBotonSecundario"
        android:text="@string/volver"
        android:textColor="@color/colorTextoPrincipal"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btnCambiarClave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtMensajeDesarrollo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mensaje_equipo_desarrollo"
        android:textColor="@color/colorError"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnVolverInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ListView
        android:id="@+id/listEquipoDesarrollo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/txtMensajeDesarrollo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>