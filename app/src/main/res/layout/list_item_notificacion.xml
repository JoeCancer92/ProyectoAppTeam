<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_notificacion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:background="@color/colorCardBackground"> <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_notification_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    >

    <ImageView
        android:id="@+id/iv_notificacion_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_dialog_info"
        app:tint="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="Icono de la notificación" />

    <TextView
        android:id="@+id/tv_notificacion_mensaje"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="14sp"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintEnd_toStartOf="@+id/tv_notificacion_tiempo"
        app:layout_constraintStart_toEndOf="@+id/iv_notificacion_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dante Sotero ha comentado tu publicación." />

    <TextView
        android:id="@+id/tv_notificacion_tiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorTextSecondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Hace 5 min" />

    <View
        android:id="@+id/v_unread_indicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_unread_dot"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_notificacion_tiempo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="gone"/> </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>