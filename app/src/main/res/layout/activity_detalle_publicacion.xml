<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".actividades.DetallePublicacionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_detalle_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/detalle_publicacion_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="16dp" />

        <!-- CardView con info de publicación -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_detalle_usuario_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginBottom="8dp"
                    tools:text="Publicado el 15/09/2025" />

                <TextView
                    android:id="@+id/tv_detalle_urgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/anuncio_urgente"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:paddingBottom="8dp" />

                <TextView
                    android:id="@+id/tv_detalle_categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/colorBotonPrincipal"
                    android:layout_marginBottom="8dp"
                    tools:text="Categoría: Objetos Perdidos" />

                <TextView
                    android:id="@+id/tv_detalle_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_marginBottom="12dp"
                    tools:text="Esta es la descripción detallada de la publicación." />

                <TextView
                    android:id="@+id/tv_fotos_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textColor="@color/colorTextSecondary"
                    android:layout_marginBottom="12dp"
                    tools:text="Imágenes: 3 fotos adjuntas" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="@color/colorBotonPrincipal"
                        android:contentDescription="@string/mapa_icono_desc"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_detalle_ubicacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="@color/colorTextPrimary"
                        tools:text="Ubicación: Bloque H, Piso 3" />
                </LinearLayout>

                <!-- Botón dinámico: Ver interacciones / Contactar -->
                <Button
                    android:id="@+id/btn_interaccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver interacciones"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="16dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sección de interacciones -->
        <TextView
            android:id="@+id/tv_sin_interacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No hay interacciones aún."
            android:textColor="@color/colorTextSecondary"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_interacciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:listitem="@android:layout/simple_list_item_1" />

    </LinearLayout>
</ScrollView>