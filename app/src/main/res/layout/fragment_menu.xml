<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedorBotones"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragmentos.MenuFragment">

    <!-- Ícono institucional arriba -->
    <ImageView
        android:id="@+id/logoInstitucional"
        android:layout_width="150dp"
        android:layout_height="169dp"
        android:background="#00000000"
        android:src="@drawable/isotipo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <ImageView
        android:id="@+id/logoNombre"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="#00000000"
        android:src="@drawable/logo_letras"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp" />

    <!-- Mensaje institucional -->
    <TextView
        android:id="@+id/txtBienvenidoVe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/Bienvenido"
        android:textColor="#020310"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/logoInstitucional"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Contenedor cuadrado centrado verticalmente -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cuadrado_residencial"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/txtBienvenidoVe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp">

        <!-- Mi Perfil -->
        <LinearLayout
            android:id="@+id/bloqueMiPerfil"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/fragImbMiPerfil"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_boton_redondo"
                android:scaleType="centerInside"
                android:src="@drawable/perfil3" />
        </LinearLayout>

        <!-- Inicio -->
        <LinearLayout
            android:id="@+id/bloqueInicio"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/fragImbInicio"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_boton_redondo"
                android:scaleType="centerInside"
                android:src="@drawable/home4" />
        </LinearLayout>

        <!-- Publicar -->
        <LinearLayout
            android:id="@+id/bloquePublicar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/bloqueMiPerfil"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/fragImbPublicar"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_boton_redondo"
                android:scaleType="centerInside"
                android:src="@drawable/publicar3" />
        </LinearLayout>

        <!-- Notificaciones -->
        <LinearLayout
            android:id="@+id/bloqueNotificaciones"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/bloqueInicio"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/fragImbNotificaciones"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/bg_boton_redondo"
                android:scaleType="centerInside"
                android:src="@drawable/notificacion3" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>