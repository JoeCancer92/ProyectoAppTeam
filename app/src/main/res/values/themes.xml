<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para modo claro -->
    <style name="Theme.ProyectoAppTeam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- ... (colores primarios, secundarios, etc. se mantienen igual) ... -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnBackground">@color/colorTextPrimary</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- NUEVO: Temas para el tamaÃ±o de la fuente -->
    <style name="Theme.ProyectoAppTeam.Pequeno" parent="Theme.ProyectoAppTeam">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.ProyectoAppTeam.Mediano" parent="Theme.ProyectoAppTeam">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.ProyectoAppTeam.Grande" parent="Theme.ProyectoAppTeam">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Estilo para campos de texto con borde -->
    <style name="TextInputLayout.BlackOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorTextPrimary</item>
        <item name="hintTextColor">@color/colorTextSecondary</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.Hint</item>
    </style>

    <style name="TextAppearance.App.Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>